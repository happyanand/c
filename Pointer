#include <stdio.h>
int main() 
{
    int size;
    scanf("%d",&size);
    int a[size];
    int *p=a;
    for(int i=0;i<size;i++)
    {
        scanf("%d",&a[i]);
        printf("%d ",*p++);
    }
    return 0;
}


I/P:
4
1 2 3 4
O/P:
1 2 3 4




#include <stdio.h>
int main() 
{
    int a=10;
    int *b=&a;
    int **c=&b;
    printf("A=%d\nB=%d\nC=%d",a,*b,**c);
    return 0;
}

O/P:
A=10
B=10
C=10
